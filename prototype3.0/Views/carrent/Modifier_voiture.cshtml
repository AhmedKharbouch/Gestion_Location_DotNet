@model prototype3._0.Models.Voiture

@{
    ViewBag.Title = "Modifier voiture";
}

<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center col-12 col-md-7 offset-md-3 col-lg-8 offset-lg-2">
    <h2>UPDATE CAR</h2>
</div>

<hr />
<div class="d-flex justify-content-center align-items-center container ">
    <div class="row col-11 col-md-7 offset-md-1 col-lg-5 offset-lg-0">
        <img class="rounded mx-auto d-block" style="border-top-left-radius:2%" width="50%" src="~/Images/@Html.DisplayFor(model => model.Image)">
    </div>
</div>
@using (Html.BeginForm("Modifier_voiture", "carrent", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ImageTemp, null)
    @Html.HiddenFor(model => model.Image)
    @Html.HiddenFor(model => model.car_ID)
    @Html.HiddenFor(model => model.Cat_ID)
    @Html.HiddenFor(model => model.model_ID)
    @Html.HiddenFor(model => model.circulation)

    <div class="d-flex justify-content-center align-items-center container ">
        <div class="row col-8 col-md-7 offset-md-2 col-lg-7 offset-lg-4">
            <div class="form-group mt-4">
                <label>Carburant</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.carburant, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.carburant, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <label>Matricule</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.num_immatri, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.num_immatri, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <label>Prix Location</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.loca_jounalier, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.loca_jounalier, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mt-3">
                <label for="ImageTemp">Nouvelle Image </label>
                <input type="file" name="ImageTemp" id="ImageTemp" class="form-control form-control-file" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mt-4 mb-5">
                    <input type="submit" value="UPDATE" class="btn btn-warning  " />
                </div>
            </div>
        </div>
    </div>

}


<div class="form-group mt-3 text-center">
    @Html.ActionLink("Accueil", "Index", "", new { @class = "btn btn-outline-primary" })
    @Html.ActionLink("Retour", "Index_Car", "", new { @class = "btn btn-outline-primary md-3" })

</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>




@model prototype3._0.Models.Modeles

@{
    ViewBag.Title = "Modifier_modele";
}
<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center col-12 col-md-7 offset-md-3 col-lg-8 offset-lg-2">
    <h2>UPDATE MODELES</h2>
</div>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.model_ID)
    
    <div class="d-flex justify-content-center align-items-center container ">
        <div class="row col-12 col-md-7 offset-md-2 col-lg-7 offset-lg-4">
            <div class="form-group mt-4">
                <label>Marque</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nom_marque, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.nom_marque, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <label>Numéro de Serie</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.num_serie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.num_serie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mt-4 mb-5">
                    <input type="submit" value="UPDATE" class="btn btn-sm btn-warning  " />
                </div>
            </div>
        </div>
    </div>
}


<div class="form-group mt-3 text-center">
    @Html.ActionLink("Accueil", "Index", "", new { @class = "btn btn-sm btn-outline-primary" })
    @Html.ActionLink("Retour", "Index_Model", "", new { @class = "btn btn-sm btn-outline-primary" })

</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@model prototype3._0.Models.Modeles

@{
    ViewBag.Title = "Create modeles";
}
<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center col-12 col-md-7 offset-md-3 col-lg-8 offset-lg-2">
    <h2>ADD MODELES</h2>
</div>
<hr />
<div class="d-flex justify-content-center align-items-center container ">
    <div class="row col-12 col-md-7 offset-md-2 col-lg-7 offset-lg-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()




            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mt-5">
                <label>Nom de Marque</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nom_marque, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nom_marque, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <label>Numero de serie</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.num_serie, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.num_serie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10 mt-5 mb-5">
                    <input type="submit" value="Create" class="btn btn-success me-5 " />

                    @Html.ActionLink("Accueil", "Index", "", new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Models", "Index_Model", "", new { @class = "btn btn-outline-primary" })

                </div>
            </div>

        }
    </div>
    </div>




        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@model IEnumerable<prototype3._0.Models.Location>

@{
    ViewBag.Title = "Index location";
}
<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center">
    <h2>Location List</h2>
</div>
<hr />

<table class="table table-hover">
    <tr class="table-dark">
        <th scope="col">
            Client
        </th>
        <th scope="col">
            Voiture
        </th>
        <th scope="col">
            Matricule
        </th>
        <th scope="col">
            Debut
        </th>
        <th scope="col">
            Fin
        </th>
        <th scope="col">
            Price
        </th>
        <th scope="col">
            valid
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @{
            prototype3._0.Models.GCBD db1 = new prototype3._0.Models.GCBD();
            prototype3._0.Models.Client client = db1.Clients.Find(item.CID);
            prototype3._0.Models.Voiture voiture = db1.Voiture.Find(item.car_ID);
            prototype3._0.Models.Modeles modeles = db1.Modeles.Find(voiture.model_ID);

        }
        @Html.DisplayFor(modelItem => client.Nom_c)
    </td>
    <td>
        @Html.DisplayFor(modelItem => modeles.nom_marque)
    </td>
    <td>
        @Html.DisplayFor(modelItem => voiture.num_immatri)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_debut)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_fin)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.prix_location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Isvalid)
    </td>
    <td class="text-sm-end">
        @Html.ActionLink("Edit", "Modifier_location", new { id = item.LID }, new { @class = "btn btn-outline-warning btn-sm" })
        @Html.ActionLink("Details", "Info_location_admin", new { id = item.LID }, new { @class = "btn btn-outline-info btn-sm" })
        @Html.ActionLink("Delete", "Supprimer_location_admin", new { id = item.LID }, new { @class = "btn btn-outline-danger btn-sm" })
    </td>
</tr>
    }

</table>
<div class="form-group mt-3 text-center">
@Html.ActionLink("Accueil", "Index", "", new { @class = "btn btn-outline-primary" })

</div>
@model prototype3._0.Models.Modeles

@{
    ViewBag.Title = "Supprimer modele";
}

<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center col-12 col-md-7 offset-md-3 col-lg-8 offset-lg-2">
    <h2>DETAILS ABOUT CLIENT</h2>
</div>

<hr />
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>
@{
    prototype3._0.Models.GCBD db1 = new prototype3._0.Models.GCBD();
    int voiture = db1.Voiture.ToList().Where(cl => cl.model_ID == Model.model_ID).Count();
    if (voiture != 0)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
            <div>
                Vous etes sure de supprimer ce modele avec @voiture voiture(s)
            </div>
        </div>
    }

}
<div class="d-flex justify-content-center align-items-center container ">
    <div class="row col-12 col-md-7 offset-md-2 col-lg-7 offset-lg-4">

        <div class="form-group mt-5">
            <label>Marque</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_marque, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>
        </div>
        <div class="form-group mt-5">
            <label>Serie</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.num_serie, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group ">
                <div class="col-md-offset-2 col-md-10 mt-4 mb-3">
                    <input type="submit" value="Delete" class="btn btn-danger " />
                    @Html.ActionLink("Retour", "Index_Model", "", new { @class = "btn btn-outline-primary md-3" })
                </div>
            </div>
        }

    </div>
</div>
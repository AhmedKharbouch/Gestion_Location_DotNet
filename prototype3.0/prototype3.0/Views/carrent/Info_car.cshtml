@model prototype3._0.Models.Voiture

@{
    ViewBag.Title = "Info car";
}
<a class="lead text-muted mb-3 text-decoration-none" style="font-size:xx-large" href="~/carrent/Index">CARRENT</a>
<div class="form-group text-center col-12 col-md-7 offset-md-3 col-lg-8 offset-lg-2">
    <h2>DETAILS ABOUT CAR</h2>
</div>

<hr />
<div class="d-flex justify-content-center align-items-center container ">
    <div class="row col-11 col-md-7 offset-md-1 col-lg-5 offset-lg-0">
        <img class="rounded mx-auto d-block" style="border-top-left-radius:2%" width="50%" src="~/Images/@Html.DisplayFor(model => model.Image)">
    </div>
</div>
<div class="d-flex justify-content-center align-items-center container ">
    <div class="row col-12 col-md-7 offset-md-2 col-lg-7 offset-lg-4">

        <div class="form-group mt-5">
            <label>Immatriculation</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.num_immatri, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>
        </div>

        <div class="form-group mt-3">
            <label>Price</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.loca_jounalier, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>
        </div>

        <div class="form-group mt-3">
            <label>Carburant</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.carburant, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>
        </div>
        @{
            prototype3._0.Models.GCBD db1 = new prototype3._0.Models.GCBD();
            prototype3._0.Models.Modeles modele = db1.Modeles.Find(Model.model_ID);
            <div class="form-group mt-3">
                <label>Modele</label>
                <div class="col-md-10">
                <input class="form-control" type="text" readonly="readonly" value="@modele.nom_marque" />

                </div>
            </div>
        }
        @{
            prototype3._0.Models.GCBD db = new prototype3._0.Models.GCBD();
            prototype3._0.Models.Categories categorie = db.Categories.Find(Model.Cat_ID);
            <div class="form-group mt-3">
                <label>Categorie</label>
                <div class="col-md-10">
                <input class="form-control" type="text" readonly ="readonly" value="@categorie.Nom" />

                </div>
            </div>
        }
    </div>
</div>
<div class="form-group mt-3 text-center">
    @Html.ActionLink("Accueil", "Index", "", new { @class = "btn btn-outline-primary" })
    @Html.ActionLink("Retour", "Index_Car", "", new { @class = "btn btn-outline-primary" })

</div>